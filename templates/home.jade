extends layout
block main
  .row
    .home-hero.textPrimary-white.backgroundPrimary-color.col-xs-12
      i.fa.fa-thumbs-o-down.faa-float.fa-5x.animated.faa-fast
      .logo-text.col-xs-12
        h5.title <strong>Nope</strong> Don't Care
        h1 An anti-social network.
        h1 Because you can't like everything.
        button.btn.textPrimary-white.backgroundSecondary-color(type="submit")
          p.txtMd Sign in with Facebook (#hateit)
    .home-about.col-xs-12.padding-xl
      .home-about-title.col-xs-12.marginBottom-lg.marginTop-md
        h3 About <strong>Nope</strong> Don't Care
      .home-about-icon.col-xs-6.col-md-3.padding-xl.faa-parent.animated-hover
        i.fa.fa-camera-retro.fa-4x.paddingBottom-lg.faa-pulse.faa-show
        h1 Post vexatious pictures
      .home-about-icon.col-xs-6.col-md-3.padding-xl.faa-parent.animated-hover
        i.fa.fa-fighter-jet.fa-4x.paddingBottom-lg.faa-passing.faa-show.faa-show
        h1 Follow likeminded frenemies
      .home-about-icon.col-xs-6.col-md-3.padding-xl.faa-parent.animated-hover
        i.fa.fa.fa-thumbs-o-down.fa-4x.paddingBottom-lg.faa-float.faa-fast
        h1 Dislike/comment on posts
      .home-about-icon.col-xs-6.col-md-3.padding-xl.faa-parent.animated-hover
        i.fa.fa-bomb.fa-4x.paddingBottom-lg.faa-tada.faa-show
        h1 View most vexatious posts
    .home-last.col-xs-12
      .paddingBottom-lg.paddingTop-lg.marginTop-md.textPrimary-white.backgroundSecondary-color
        a(href="/about" title="Learn more")
          i.fa.fa-question-circle.fa-2x.faa-pulse.faa-show
          h1 I still don't get it...
